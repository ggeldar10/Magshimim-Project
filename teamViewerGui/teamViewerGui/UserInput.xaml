<Window x:Class="teamViewerGui.UserInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:teamViewerGui"
        mc:Ignorable="d"
        Title="UserInput" Height="200" Width="300" Closing="Window_Closing">
    <Grid>
        <Label Content="Enter ip to connect to" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" Width="auto"  />
        <TextBox HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" Text="Enter Here" VerticalAlignment="Top" Width="200" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Name="textBoxIp" TextAlignment="Center" Background="AliceBlue"/>
        <Button Content="Connect" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Background="Beige" Width="100" Click="Button_Click"/>
        <Label Content="Error: not a valid ip" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" FontSize="7" TextElement.Foreground="Red" Visibility="Hidden" Name="errorMsg"/>


    </Grid>
</Window>
